{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/host/serverless_orleans.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "docker build",
            "command": "docker",
            "type": "process",
            "args": [
                "build",
                "-t",
                "serverlessorleans:latest",
                "${workspaceFolder}/."
            ]
        }
